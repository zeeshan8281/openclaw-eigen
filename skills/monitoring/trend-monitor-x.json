{
  "name": "trend-monitor-x",
  "version": "1.0.0",
  "description": "Scrape trending crypto/dev topics from X using OpenClaw browser skill",
  "config": {
    "schedule": "0 */3 * * *",
    "search_queries": [
      "solana developer",
      "ethereum layer2",
      "eigenlayer builders",
      "AI agents web3"
    ]
  },
  "skill": {
    "type": "browser",
    "actions": [
      {
        "action": "navigate",
        "url": "https://x.com/search?q={{query}}&f=top"
      },
      {
        "action": "wait",
        "selector": "[data-testid='tweet']"
      },
      {
        "action": "extract",
        "data": {
          "tweets": {
            "selector": "[data-testid='tweetText']",
            "multiple": true,
            "limit": 5
          },
          "engagement": {
            "selector": "[data-testid='app-text-transition-container']",
            "multiple": true,
            "limit": 5
          }
        }
      }
    ]
  },
  "output_handler": "brief-generator"
}
